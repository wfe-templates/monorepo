{
    "name": "yarn-monorepo",
    "version": "1.1.1",
    "description": "Base Yarn Workspace Monorepo Project Template",
    "main": "index.js",
    "author": "busyhe <busyhe@qq.com>",
    "scripts": {
        "postinstall": "husky install",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable"
    },
    "license": "MIT",
    "keywords": [
        "yarn2",
        "monorepo",
        "template"
    ],
    "workspaces": [
        "packages/*"
    ],
    "packageManager": "yarn@3.2.1",
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/git": "^10.0.1",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^8.0.1",
        "lint-staged": "^12.4.1",
        "pinst": "^3.0.0",
        "semantic-release": "^19.0.2"
    },
    "bugs": {
        "url": "https://github.com/wfe-templates/yarn-monorepo/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wfe-templates/yarn-monorepo.git"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,vue}": "eslint --fix"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
